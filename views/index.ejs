<!DOCTYPE html>
<html>
  <head>
    <title>YHack2014</title>
    
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    
  </head>
  <body>

    <!-- FIRST CONTAINER TO LOGIN -->
	<div class="global_container" id="global_container_1">
		<div id="login_block">
			<div id="inner_container">
				<div id="typer_welcome"></div>
				<form action ="" id="loginform">
					<input type="text" placeholder="Enter your name" id="name" name="name"></input>
				</form>
			</div>
		</div>
	</div>
	<!-- END OF FIRST CONTAINER -->

	<!-- SECOND CONTAINER TO CHAT -->
	<div class="global_container" id="global_container_2">
		<div id="user_info">
			<i class="fa fa-male" id="user_icon"></i>
		</div>
		<canvas id="myCanvas"></canvas>
		<canvas id="canvasOverlay"></canvas>
		<div class="user_params">
			<div class="element">
				Color: <i class="fa fa-paint-brush black" ></i>&nbsp;<i class="fa fa-paint-brush red"></i>
			</div>
			<div class="element">
				Writing Enable: <i class="fa fa-check-square" id="writing_enable"></i><i class="fa fa-minus-square" id="writing_disable"></i>
			</div>
      <div class='marquee'>
      </div>
	  </div>
   	</div>

    <script src="/bower_components/jquery/dist/jquery.min.js" type="text/javascript"></script>
    <script src="/bower_components/socket.io-client/socket.io.js" type="text/javascript"></script>
    <script type='text/javascript' src='//cdn.jsdelivr.net/jquery.marquee/1.3.1/jquery.marquee.min.js'></script>
    <script src="/js/client.js" type="text/javascript"></script>
    <script src="/js/typer.js" type="text/javascript"></script>

    <script>
	  $(function(){
	      $("#typer_welcome").typed({
	        strings: ["Welcome to the virtual whiteboard.", "Get into the magic."],
	        typeSpeed: 20
	      });
	  });
	</script>
  </body>
</html>